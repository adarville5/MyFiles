int inputNconvert(){

	char input;

	cin.get(input);
	cin.ignore(100,'\n');
	switch(input){
			case 'r':
			case 'R': return 0;
			case 'p':
			case 'P': return 1;
			case 's':
			case 'S': return 2;
		}
}

int GetComputerPlay(){
	return rand()%3;
}

bool CheckWin(int user, int comp, int& numWin, int& totMatch){
	if (user - comp == 1 || (comp - user == 2)){
		numWin++;
		totMatch++;
		return true;
	}
	else{
		totMatch++;
		return false;
	}
}

void OutputWin(bool CheckWin, string name){
	if (CheckWin){
		cout << name << " WINS!!" << endl << endl << endl;
	}
	else {
		cout << "Computer wins, better luck next time, " << name <<"!";
		cout << endl << endl << endl;
	}
}

void OutputMatchWinner(int numWin, int totMatch, string name){
	int percent;
	percent = round((numWin / float(totMatch))*100);
	cout << "***********************************" << endl
		<< "*********  FINAL RESULTS  *********" << endl
		<< "***********************************" << endl << endl;
	if (percent > 50){
		cout << name << " is the WINNER, WINNER, CHICKEN DINNER!!" << endl;
		cout << name << " won " << percent << "% of the time!" <<endl;
	}
	else{
		cout << name << " loses, better luck next time!" << endl;
		cout << name << " lose " << percent << "% of the time!" <<endl;
	}

}

