void printrock(){

	cout << "  .----.-----.-----.-----.          "  << endl;
	cout << " /      \\     \\     \\     \\     "  << endl;
	cout << "|  \\/    |     |   __L_____L__     "  << endl;
	cout << "|   |    |     |  (           \\    "  << endl;
	cout << "|    \\___/    /    \\______/    |  "  << endl;
	cout << "|        \\___/\\___/\\___/      |  "  << endl;
	cout << " \\      \\     /               /   "  << endl;
	cout << "  |                        __/      "  << endl;
	cout << "   \\_                   __/        "  << endl;
	cout << "    |        |         |            "  << endl;
	cout << "    |                  |            "  << endl;
	cout << "    |                  |            "  << endl;

}

void printpaper(){

	  cout << "    .-.      " << endl
			<< "  | | | |    " << endl
			<< ".-| | | |    " << endl
			<< "| | | | |    " << endl
			<< "| | | | |-.  " << endl
			<< "| '     | |  " << endl
			<< "|       | |  " << endl
			<< "|         |  " << endl
			<< "\\         / " << endl
			<< " |       |   " << endl
			<< " |       |   " << endl;

}

void printscissor(){

	cout << "          _ " << endl;
	cout << " _       /<)" << endl;
	cout << "(>\\     / /" << endl;
	cout << " \\ \\   / / "  << endl;
	cout << "  \\ \\ / /   "  << endl;
	cout << "   \\ V / Y-. "  << endl;
	cout << "  /|     ` | " << endl;
	cout << " | |       |" << endl;
	cout << " |         |" << endl;
	cout << " \\         /" << endl;
	cout << " |        |"  << endl;
	cout << " |        |"  << endl;

}

void print(int comp,int user){
	cout << "Computer Plays - ";
	if (comp == 0){
		cout << "Rock!\n";
		printrock();
	}
	else if (comp == 1){
		cout << "Paper!\n";
		printpaper();
	}
	else if (comp == 2){
		cout << "Scissor!\n";
		printscissor();
	}
	cout << endl << endl;

	cout << "User Plays - ";
	if (user == 0){
		cout << "Rock!\n";
		printrock();
	}
	else if (user == 1){
		cout << "Paper!\n";
		printpaper();
	}
	else if (user == 2){
		cout << "Scissor!\n";
		printscissor();
	}
	cout << endl << endl;

}

